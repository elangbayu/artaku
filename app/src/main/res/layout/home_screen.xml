<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundHomeScreen"
    android:orientation="vertical">

    <!--Card-->
    <LinearLayout
        android:id="@+id/card"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="55dp"
        android:background="@color/colorAccent"
        android:orientation="vertical"
        android:padding="15dp">

        <!--Top Section Card-->
        <LinearLayout
            android:id="@+id/top_section_card"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <!--Nama User-->
            <TextView
                android:id="@+id/nama_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lindsay Johnson" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="..."
                android:textSize="40dp" />

        </LinearLayout>

        <!--Top Section Card-->
        <LinearLayout
            android:id="@+id/balance"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Balance" />

            <!--Jumlah Saldo User-->
            <TextView
                android:id="@+id/saldo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$970"
                android:textSize="30dp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="Last Transaction" />

        <!--Transaksi Terakhir-->
        <TextView
            android:id="@+id/last_transaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="Senin, 14 April 2019" />

    </LinearLayout>
    <!--END OF Card-->



    <!--Rows Options-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content">

        <!--Top Row-->
        <LinearLayout
            android:id="@+id/top_row_options"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:textAlignment="center"
                android:layout_marginRight="20dp"
                android:background="@color/colorAccent"
                android:text="Profile Information" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:textAlignment="center"
                android:background="@color/colorAccent"
                android:text="Lorem Ipsum" />
        </LinearLayout>

        <!--Bottom Row-->
        <LinearLayout
            android:id="@+id/bottom_row_options"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:textAlignment="center"
                android:layout_marginRight="20dp"
                android:background="@color/colorAccent"
                android:text="Profile Information" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:textAlignment="center"
                android:background="@color/colorAccent"
                android:text="Lorem Ipsum" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>